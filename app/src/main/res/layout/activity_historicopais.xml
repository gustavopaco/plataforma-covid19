<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.HistoricoPaisActivity">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnnoticias"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Notícias"
            android:textSize="8.5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:fontFamily="@font/robotomedium"/>

        <Button
            android:layout_marginRight="10dp"
            android:id="@+id/btnsintomas"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sintomas"
            android:textSize="8.5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:fontFamily="@font/robotomedium"/>

        <Button
            android:layout_marginRight="10dp"
            android:id="@+id/btncasos"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Meu Estado"
            android:textSize="7dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:fontFamily="@font/robotomedium"/>

        <Button
            android:id="@+id/btnsummary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Países"
            android:textSize="8.5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/grey"
            android:fontFamily="@font/robotomedium"/>

    </LinearLayout>

    <TextView
        android:id="@+id/nhistoricopais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="País:"
        android:layout_below="@id/head"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:id="@+id/historicopais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/nhistoricopais"
        android:layout_toRightOf="@id/nhistoricopais"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listahistorico"
        android:layout_below="@id/nhistoricopais"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>